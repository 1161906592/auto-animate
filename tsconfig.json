{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": false,
    "target": "esnext",
    "declaration": true,
    "declarationMap": false,
    "useDefineForClassFields": false,
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "removeComments": false,
    "skipLibCheck": true,
    "lib": ["esnext", "dom"],
    "rootDir": "./src",
  },
  "include": ["src"],
}
